{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "lib": ["es7", "dom"],
    "types": ["webpack-env", "jest"]
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}
